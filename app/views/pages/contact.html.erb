<div class="contact-main">
  <img alt="Open" class="icon-menu" src="<%= asset_path 'menu-black.svg' %>" width="24px" />
  <div class="container">
    <h1>Own repos</h1>
    <% @myownrepos.each do |ownrepo| %>
      <div class="row">
        <h2> <%= ownrepo.name %> </h2>
        <div class="col-md-3">
          <p> <%= ownrepo.description %> </p>
        </div>
        <div class="col-md-3">
          <p style="text-align:right"> Language: <%= ownrepo.language %> </p>
        </div>
        <div class="col-md-3">
          <p style="text-align:right"> Created at: <%= ownrepo.created_at %> </p>
          <p style="text-align:right"> Updated at: <%= ownrepo.updated_at %> </p>
        </div>
        <div class="col-md-3">
          <a href="<%=ownrepo.html_url %>" class="btn btn-primary">Go to GitHub</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="contact-main">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-6">
        <h1>Forked repos</h1>
      </div>
    </div>
