        <p> <%= forkedrepo.description %> </p>
      </div>
      <div class="col-md-3">
        <p style="text-align:right"> Language: <%= forkedrepo.language %> </p>
      </div>
      <div class="col-md-3">
        <p style="text-align:right"> Created at: <%= forkedrepo.created_at %> </p>
        <p style="text-align:right"> Updated at: <%= forkedrepo.updated_at %> </p>
      </div>
      <div class="col-md-3">
        <a href="<%=forkedrepo.html_url %>" class="btn btn-primary">Go to GitHub</a>
      </div>
    </div>
    <% end %>
  </div>
</div>
